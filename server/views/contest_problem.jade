extends contest_layout

block content_contest
	div.row
		div.col-xs-9
			div.panel.panel-default
				div.panel-heading
					p Problem #{problemid} in Contest #{contestid}
				div.panel-body
					!{probmd}
		div.col-xs-3
			form(method='POST',action='/problems/#{contestid}/#{problemid}/upload',enctype='multipart/form-data')
				div.panel.panel-default
					div.panel-heading
						p 提交
					div.panel-body
						div.form-group
							label 请选择语言
							select.form-control(name='language')
								option(value='g++') g++
								option(value='gcc') gcc
						div.form-group
							label 请选择答案文件
							input.form-control(name='inputfile',type='file',multiple='multiple')
					div.panel-footer
						div.form-group
							input.btn.btn-success(type='submit' value='递交评测')
