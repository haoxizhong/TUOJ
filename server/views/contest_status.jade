extends contest_layout

block content_contest
	- var statusMap = { "Accepted": "success", "Wrong Answer": "danger", "Time Limit Exceeded": "warning", "Memory Limit Exceeded": "warning", "Runtime Error": "warning", "Compilation Error": "primary", "No Source": "warning", "Dangerous Program": "primary", "Waiting": "info", "Running": "info", "Compilation Success": "info", "Running success": "success", "Compile error": "primary", "Running timeout": "warning", "Running error": "warning" }
	div.container-fluid
		- if (contestname !== undefined) {
			div.page-header
				h3 #{user}在#{contestname}的递交
			table.table.table-hover
				thead
					tr
						th #
						th 题目
						th 用户
						th 语言
						th 状态
						th 得分
						th 递交时间
				tbody
					- for (var i in judgelist) {
						- var now=judgelist[i]
						tr
							td 
								a(href='/contests/#{contestid}/detail/#{now.id}') #{now.id}
							td 
								a(href='/contests/#{contestid}/problems/#{now.problemid}') #{now.title}
							td #{now.user}
							td #{now.lang}
							td 
								a(href='/contests/#{contestid}/detail/#{now.id}')
									span.label(class='label-#{statusMap[now.status]}') #{now.status} 
							td #{now.score}
							td #{now.time}
					- }
		- } else {
			h3 #{user}当前没有递交记录
		- }
