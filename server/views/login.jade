extends layout

block content
	div.row
		div.col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
			div.panel.panel-default
				form(method='POST' action='/login')
					div.panel-heading
						登录TUOJ
					div.panel-body
							div.form-group
								label(for='username') 用户名
								input.form-control(type='text' name='username' placeholder='Username')
							div.form-group
								label(for='userpass') 密码
								input.form-control(type='password' name='userpass' placeholder='Password')
					div.panel-footer
						button.btn.btn-default(type='submit') 登陆
